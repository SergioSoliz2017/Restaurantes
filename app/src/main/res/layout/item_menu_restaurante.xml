<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:layout_marginTop="15dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:background="#a5d6a7">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="6dp">
            <ImageView
                android:id="@+id/fotoPlatoMenu"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="50dp"
                android:contentDescription="Logo del restaurante" />
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/fotoPlatoMenu"
                android:orientation="vertical"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/fotoPlatoMenu">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/nombrePlatoMenu"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Nombre del Restaurante"
                        android:textSize="20sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/precioPlatoMenu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nombre del Restaurante"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/ingredientesPlatoMenu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Nombre del Restaurante"
                    android:textSize="12sp" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
